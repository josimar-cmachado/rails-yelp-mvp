<p> name: <%= @restaurant.name%></p>
<p> address: <%= @restaurant.address%></p>
<p> Phone number: <%= @restaurant.phone_number%></p>
<p> category: <%= @restaurant.category%></p>

<div class="container mt-5">
  <h1><%= @restaurant.name %> <small>(<%= @restaurant.category %>)</small></h1>
  <ul>
    <li>Name: <%= @restaurant.name %></li>
    <li>Address: <%= @restaurant.address %></li>
    <li>Phone Number: <%= @restaurant.phone_number %></li>
    <li>Category: <%= @restaurant.category %></li>
  </ul>

  <%= link_to "Edit #{@restaurant.name}", edit_restaurant_path(@restaurant) %>
  <br>
  <%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } %>
  <br>
  <%= link_to "Back to all restaurants", restaurants_path %>
</div>
